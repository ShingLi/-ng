/**app.wxss**/
@import 'lib/dist/index.wxss' ;

view{
    box-sizing: border-box;
}
page{
    height: 100%;
    width: 100%;
    background-color: #fff;
    
} 
.container{
    height: 100%;
    width: 100%;
    background-color: #fff;
}
view{
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    -webkit-tap-highlight-color: transparent; 
}
text{
    color:rgb(51,51,51);
}
/*共用的头部  */
.header{
    height: 330rpx;
    width: 100%;
    position: relative;
    margin-bottom: 20rpx;
}
.header_bg{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 330rpx;
    z-index: -1;
}
.header_info{
    display: flex;
    align-items: center;
    padding: 60rpx 40rpx 0 40rpx;
}
.header_info .avater{
    height: 160rpx;
    width: 160rpx;
    flex: 0 0 160rpx;
    border-radius: 50%;

}
.header_info>.text{
    flex: 1;
    text-align:left;
    font-size: 0;
    color:rgb(51,51,51);
    margin-left: 20rpx;
}
.header_info>.text>text{
    display: block;
}
.header_info>.text>.desc{
    font-size: 30rpx;
    line-height: 50rpx;
}
.header_info>.text>.title{
    font-size: 24rpx; 
    letter-spacing: 5rpx;   
}
.zhen{
    width: 204rpx;
    
    line-height: 31rpx;
    margin: auto;
    position: relative;
    text-align: center;
}
.zhen .caozhen{
    position: absolute;
    top:50%;
    left: 0;
    width: 100%;
    transform: translateY(-50%);
    height: 8rpx  
}
.zhen text{
    font-size: 30rpx;
}

