/* pages/card/card.wxss */
.tab{
    width: 300rpx;
    height: 60rpx;
    line-height: 60rpx;
    margin: 20rpx auto 40rpx auto;
    display: flex;
    border:1rpx solid rgb(51,51,51);
    border-radius: 40rpx;
    overflow: hidden;
    font-size: 0;
}
.tab-item{
    font-size: 30rpx;
    width: 50%;
    height: 100%;
    text-align: center;
}
.active{
    color: #fff;
    background-color: rgb(51,51,51)
}
/*滑动容器  */
.swiper-item{
    
}
.swiper-item>view{
    width: 618rpx;
    display: flex;
    margin: auto;
    justify-content: space-between;
    flex-wrap: wrap;
}
.card-item{
    width: 292rpx;
    height: 136rpx;
    position: relative;
    margin-bottom: 50rpx;
}
.card-bg{
    position: absolute;
    z-index: -1;
    width: 292rpx;
    height: 150rpx;
}
.box{
    width: 100%;
    height: 100%; 
    display: flex;
    padding: 20rpx;
    
}
.box-left{
    flex:0 0 90rpx;
    display: flex;
    align-items: center
}
.num{
    font-size: 0;
    color: #fff;
    margin-right: 15rpx;
}
.num text:nth-child(1){
    color: #fff;
    font-size: 24rpx;
    vertical-align: top;
    
}
.num text:nth-child(2){
    color: #fff;
    font-size: 66rpx;
}
.box-right{
    flex:1;
    font-size: 0;
}
.box-right text{
    display: block;
    
}
.box-right text:nth-child(1){
    margin-top: 10rpx;
    margin-bottom: 5rpx;
    font-size: 30rpx;
    color: #fff;
}
.box-right text:nth-child(2){
    font-size: 14rpx;
    color:#fff;
}
.box-right text:nth-child(3){
    margin-top: 2rpx;
    font-size: 10rpx;
    color:#fff;
}
.smile_icon{
    width: 60rpx;
    height: 60rpx;
    display: block;
    margin: auto;
}