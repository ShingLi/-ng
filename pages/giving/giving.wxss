/* pages/giving/giving.wxss */
.giving_wrap{
    margin: 40rpx 55rpx 30rpx 55rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between
}
.list_item{
    width: 305rpx;
    height: 155rpx;
    margin-bottom: 30rpx;
    position: relative
}
.list_item image{
    position: absolute;
    width: 305rpx;
    height: 155rpx;
    z-index: -1;
}
.list_item text{
    display: block;
    position: absolute;
    left: 28%;
    right: 2%;
    overflow: hidden;
    color: rgb(255,64,64);
}
.one{
    right: 50rpx;
    font-size: 60rpx;
}
.two{
    font-size: 20rpx;
    top:50%;
    right: 60rpx;
}
.three{
    font-size: 24rpx;
    bottom: 10rpx;
    right: 21%;
}
.record{
    text-align: center;
    font-size: 36rpx;
    color: rgb(153,153,153)
}