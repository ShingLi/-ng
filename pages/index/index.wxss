/**index.wxss**/
.activity{
    position: relative;
    width: 660rpx;
    height: 240rpx;
    margin: auto;
    border-radius:8rpx;
    background: linear-gradient(45deg,#ff9f7f,#ff4040); 
}
.top{
    display: flex;
    padding: 10rpx 0 10rpx 0;

}
.top>view{
    float: left;
    width: 49.5%;
    color: #fff;
    font-size: 0;
}
.top>.yue{
    text-align: center;
    border-right: 1rpx solid #fff;
}
.top>.jf{
    text-align: center;
      
}
.top>.yue>view{
    font-size: 50rpx;
}
.top>.yue>text{
    font-size: 24rpx;
    color: #fff;
}
.top>.jf>view{
    font-size: 72rpx;    
}
.top>.jf>text{
    font-size: 24rpx;
    color: #fff;
}
.bottom{
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 86rpx;
    border-top: 1rpx solid #fff;
}
.bottom>view{
    width: 49.5%;
    float:left;
    height: 86rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.bottom>view:first-child{
    border-right: 1rpx solid #FFF;
}
.bottom>view>image{
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}
.bottom>view>text{
    font-size: 30rpx;
    color:rgb(255,255,255);
}
.grid{
    margin:20rpx 75rpx 0rpx 75rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}
.grid_item{
    width: 160rpx;
    height: 160rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 8rpx;
    margin-bottom: 40rpx;
    color: #fff;
    font-size: 0;

}

.grid_item image{
    width: 72rpx;
    height: 72rpx;
    margin-top: 15rpx;
}
/*  */
.grid_item .lv{
    font-size: 24rpx;
    color: #fff;    
}
.grid_item .level{
    font-size: 30rpx;
    color: #fff;
}
