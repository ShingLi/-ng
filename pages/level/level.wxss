/*modal  */
.modal{
    position: fixed;
    top:0;
    left: 0;
    bottom:0;
    width: 100%;
    background-color: rgba(0,0,0,.4)
}
.modal_body{
    position: absolute;
    width: 480rpx;
    min-height: 600rpx;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 20rpx;
    background-color: #fff;
    
}
.describle{
    margin:55rpx 0 50rpx 0;
    text-align: center;
    font-size: 36rpx;
    color: rgb(51,51,51);
    position: relative
}
.modal_body text{
    padding: 0 20rpx;
    line-height: 45rpx;
    display: block;
    font-size: 30rpx;
    color: rgb(153,153,153)
    
}
.close{
    position: absolute;
    width: 32rpx;
    height: 32rpx;
    right: 20rpx;
    top:20rpx;
}
