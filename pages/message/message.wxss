/* pages/message/message.wxss */
.msgBox{
    margin:20rpx 30rpx;
} 
.item{
    margin-bottom: 40rpx;
    padding: 20rpx 40rpx 20rpx 20rpx;
    min-height: 100rpx;
    border: 1rpx solid #F6F6F6;
    box-shadow: 0 8rpx 10rpx 0rpx #F6F6F6
    
}
.top{
    display: flex;
}
.laba{
    flex: 0 0 120rpx;
    width: 120rpx;
    height: 120rpx;
}
.context{
    width: 100%;
}
.thumbnail{
    width: 310rpx;
    font-size: 24rpx;
    margin:0 0 0 40rpx;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.time{
    
    display: flex;
    justify-content: space-between;
    margin:20rpx 0 10rpx 40rpx;
}
.time>view{
    font-size: 30rpx;
    color: rgb(51,51,51)
}
.time text{
    font-size: 24rpx;
    color:rgb(153,153,153)
}
.bottom{
    margin-top: 25rpx;
    font-size: 30rpx;
    color: rgb(153,153,153)
}
.nomore{
    display:flex;
    width:80%;
    margin:0 auto 30rpx auto;
}
.line{
    flex:1;
    position:relative;
    top:-8px;
    border-bottom: 1px solid rgba(7,17,27,.2)
}
.text{
    margin:0 auto;
    padding: 0 12px;
    font-size: 14px;
}
.full{
    position: fixed;
    top:50%;
    left: 50%;
    width: 60%;
    transform: translate(-50%,-50%)
}