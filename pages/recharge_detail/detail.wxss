/* pages/recharge_detail/detail.wxss */
.form-container{
    width: 670rpx;
    min-height: 342rpx;
    margin:40rpx auto auto auto;
    padding:10rpx 25rpx 0 25rpx;
    border: 1rpx solid rgba(153,153,153,.5);
    border-radius: 8rpx;
}
.form-control{
    display: flex;
    align-items: center;
    font-size: 0;
    border-bottom:1rpx solid rgba(153,153,153,.5)
}
.form-control:first-child{
    height: 60rpx;
    line-height: 60rpx;
}
.form-control label{
    width: 185rpx;
    font-size: 24rpx;
    color: rgb(153,153,153)
}
.form-control:nth-child(2){
    height: 58rpx;
    line-height: 58rpx;
}
.form-control:nth-child(3){
    height: 118rpx;  
}
.form-control:nth-child(4){
    height: 100rpx;
    border-bottom: none;
}
.form-control:nth-child(4) button{
    width: 280rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: rgb(51,51,51);
    color: #FFF;
}
.form-control input{
    font-size: 24rpx;
    color: rgb(51,51,51)
}
.form-control text{
    font-size: 24rpx;
    color: rgb(51,51,51)
}
.normal{
    align-items:inherit !important;
    padding: 18rpx 0 0 0;
}
.normal input{
    font-size: 60rpx;
    color: rgb(51,51,51);
    height: 70rpx;
    
}
