
<view>
    <view class='header'>
        <!--头部的背景图  -->
        <image class='header_bg' 
            src='../../images/bg@2x.png' mode='scaleToFill'></image>
        <view class='header_info'>
            <image class='avater' src='{{userInfo.avatarUrl}}'></image>
            <view class='text'>
                <text class='desc'>{{userInfo.nickname}}</text>
                <text class='title'>会员等级:lv{{level_type}}</text>
            </view>
        </view>
    </view>
    <!--余额  -->
    <view class='zhen'>
        <image src='../../images/title.png' mode='aspectFit'
            class='caozhen'
        ></image>
        <text>提现</text>
    </view>
    <!--区域  -->
    <view>
        <form bindsubmit='reflectInfo'>
            <view class='form-container'>
                <view class='form-control'>
                    <label>微信账号</label>
                    <input placeholder='请输入账号' name='userName'></input>
                </view>
                <view class='form-control'>
                    <label>手机号码</label>
                    <input placeholder='请输入11位手机号码' name='tel' type='number' maxlength='11'></input>
                </view>
                <view class='form-control normal'>
                    <label style='width:400rpx;'>提现金额（100元起）</label>
                    <view>
                        <input placeholder='100' type='number' name='money'></input>
                    </view>
                </view>
                <view class='form-control tx'>
                    <view>
                        <text>可提现余额:￥200</text>
                        <navigator><text>全部提现</text></navigator>
                    </view>
                    <view class='tx_btn'>
                        <button formType="submit">提现</button>
                    </view>
                </view>
            </view>
        </form>
    </view>
</view>
