
.form-container{
    width: 670rpx;
    min-height: 342rpx;
    margin:40rpx auto auto auto;
    padding:10rpx 25rpx 0 25rpx;
    border: 1rpx solid rgba(153,153,153,.5);
    border-radius: 8rpx;
}
.form-control{
    display: flex;
    align-items: center;
    font-size: 0;
    border-bottom:1rpx solid rgba(153,153,153,.5)
}
.form-control:first-child{
    height: 60rpx;
    line-height: 60rpx;
}
.form-control label{
    width: 185rpx;
    font-size: 24rpx;
    color: rgb(153,153,153)
}
.form-control:nth-child(2){
    height: 58rpx;
    line-height: 58rpx;
}
.form-control:nth-child(3){
    height: 118rpx;  
}
.form-control:nth-child(4){
    
    border-bottom: none;
}
.form-control:nth-child(4) button{
    /* width: 280rpx;
    height: 60rpx;
    line-height: 60rpx;
    background-color: rgb(51,51,51);
    color: #FFF; */
}
.form-control input{
    font-size: 24rpx;
    color: rgb(51,51,51)
}
.normal{
    align-items:inherit !important;
    padding: 18rpx 0 0 0;
}
.normal input{
    font-size: 60rpx;
    color: rgb(51,51,51);
    margin-top: 50rpx;
}
.tx{
    display: block !important;
    padding-top: 20rpx;
}
.tx text{
    font-size: 18rpx;
    color: rgb(153,153,153)
}
.tx navigator {
    display: inline-block;
    margin-left: 30rpx;
    color: rgb(89,116,255);
    font-size: 18rpx;
}
.tx navigator text{
    color: rgb(89,116,255);
    
}
.tx_btn{
    margin:35rpx auto 35rpx auto;
}
.tx_btn button{
     width: 280rpx;
    height: 60rpx;
    line-height: 60rpx;
    color: #fff;
    background-color: rgb(51,51,51)
}
