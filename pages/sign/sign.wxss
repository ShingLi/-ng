/* pages/sign/sign.wxss */
.signWrap{
    position: relative;
    width: 660rpx;
    height: 805rpx;    
    margin: auto;
    
}
.sign_bg{
    position: absolute;
    left: 0;
    width: 100%;
    height: 805rpx;
    z-index: -1;
}
.context{
    padding: 36rpx 36rpx;
    height: 100%;
    color: #fff;
     
}
.date{
    font-size: 36rpx;
}
.hybrid{
    display: flex;
    justify-content: space-between;
    font-size: 24rpx;

}
.hybrid text{
    color: #fff;
    font-size: 36rpx;
}
/*日期部分  */
.zzz{
    min-height: 600rpx;
    margin:38rpx auto 16rpx auto;
    border-radius: 5rpx;
    border: 1rpx solid transparent
}
.week{
    display: flex;
    background-color: #ffb2c1;
}
.week>view{
    width:13.98%;
    text-align: center;
    height: 50rpx;
    font-size: 30rpx;
    color: #A7737D;
}
.day_wrap{
    display: flex;
    flex-wrap: wrap;
    font-size: 0;
    background-color: #fff;

}
.day_wrap>view{
    position: relative;
    flex:0 0 14.28%;
    width:14.28%;
    height: 80rpx;
    color: #000;
    font-size: 28rpx;
    border-right: 1rpx solid #E6E6E6;
    border-bottom: 1rpx solid #E6E6E6

}
.day_wrap>view:nth-child(7n){
    border-right: none;
}
.small_sign{
    width: 36rpx;
    height: 36rpx;
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}
.num{
    display: block;
    margin: 5rpx 0 0 10rpx;
}
.circle{
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 16rpx auto 8rpx auto;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-color: rgb(255,199,153)
}
.btn_sign{
    height: 60rpx;
    width: 60rpx;
}
.nosign{
    text-align: center;
    font-size: 24rpx;
    color: rgb(254,254,254)
}
.color{
    color: rgb(255,66,65) !important;
}
.grey{
    color: #999999;
}
/*媒体查询适配  */
@media only screen and (width:320px) {
    .day_wrap>view{
        width: 13.9% !important;
    }
}
@media only screen and (width:375px) {
    .day_wrap>view{
        width: 13.95% !important;
    }
}
