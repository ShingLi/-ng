/* pages/userCenter/userCenter.wxss */
.group{
    margin: auto;
    margin-top: 50rpx;
    width: 670rpx;
    
    padding: 0rpx 30rpx;
    border-radius: 10rpx;
    border:1rpx solid #E9E9E9;
    box-shadow: 0 0 3px #E9E9E9;
    display: flex;
    flex-direction: column;
    justify-content: space-around
}
.cell{
    display: flex;
    justify-content: space-between;
    height: 105rpx;
    line-height: 105rpx;
    
}
.border_t{
    border-bottom: 1rpx solid rgb(230,230,230)
}
.cell label{
    font-size: 30rpx;
    color: rgb(51,51,51)
}
.avatar{
    width: 55rpx;
    height: 55rpx;
    border-radius: 50%;
}
.arrow{
    width: 20rpx;
    height: 36rpx;
    margin-left: 16rpx;
    margin-right: 25rpx;
}
.cell_right{
    display: flex;
    align-items: center;
}
.cell_right text{
    font-size: 30rpx;

}
.tel_text{
    font-size: 24rpx;
    color: rgb(153,153,153)
}